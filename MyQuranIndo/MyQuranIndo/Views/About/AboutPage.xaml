            <Image Source="icon_about.png"
                   HorizontalOptions="Start" />
            <Label Grid.Column="1" 
                   Text="{Binding Title}"
                   TextColor="White"
                   FontSize="Large"
                   FontAttributes="Bold"
                   CharacterSpacing="1"
