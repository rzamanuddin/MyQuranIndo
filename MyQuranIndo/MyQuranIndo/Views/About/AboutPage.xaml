    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>    
    <ContentPage.Resources>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
                    <Label Text = "MyQuran Indonesia Free"
                           FontSize="Large"
                           FontFamily="Montserrat-Medium"
                           HorizontalTextAlignment="Center"
                           Margin="0, 20, 0, 0"
                           TextColor="{StaticResource TextColor}"
                           CharacterSpacing="1"
                        />
                    <Label Text = "{Binding CurrentVersion, StringFormat='Version {0}'}"
                           FontSize="Large"
                           FontFamily="Montserrat-Medium"
                           HorizontalTextAlignment="Center"
                           Margin="0, 0, 0, 10"
                           TextColor="{StaticResource TextColor}"
                           CharacterSpacing="1"
                        />
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                        <ContentView Padding="0,20,0,20" VerticalOptions="FillAndExpand">
                            <Image Source="quran_logo_transparent.png" VerticalOptions="Center" HeightRequest="200" />
                        </ContentView>
                    </StackLayout>
                </StackLayout>
                <StackLayout Grid.Row="1" 
                             Orientation="Vertical" 
                             Spacing="5"
                             VerticalOptions="StartAndExpand"
                             HorizontalOptions="CenterAndExpand"
                             BackgroundColor="White"
                             Margin="10, 20, 10, 0"
                             Padding="10"
                             x:DataType="vm:AboutViewModel">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Kritik / Saran :" 
                               FontSize="Medium" 
                               TextColor="{StaticResource TextColor}"
                               CharacterSpacing="1" />
                        <Editor Grid.Row="1" 
                                Placeholder="Silahkan diisi lalu klik tombol email."
                                FontSize="Medium"
                                Text="{Binding EmailText, Mode=TwoWay}"
                                AutoSize="TextChanges"
                                TextColor="{StaticResource TextColor}"
                                />
                        <Button Grid.Row="2" 
                                Text="rzamanuddin@gmail.com"
                                TextTransform="Lowercase"
                                FontSize="Medium"
                                CharacterSpacing="2"
                                ImageSource="icon_mail.png"
                                VerticalOptions="CenterAndExpand"
                                Command="{Binding MailCommand}"/>
                    </Grid>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>    
</ContentPage>
