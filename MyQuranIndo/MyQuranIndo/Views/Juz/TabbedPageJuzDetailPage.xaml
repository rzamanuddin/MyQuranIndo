<?xml version="1.0" encoding="utf-8" ?>
<tab:BindableTabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MyQuranIndo.Views.Juz.TabbedPageJuzDetailPage"
            xmlns:d="http://xamarin.com/schemas/2014/forms/design"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:tab="clr-namespace:MyQuranIndo.Controls"
            xmlns:juz="clr-namespace:MyQuranIndo.ViewModels.Juz" 
            x:DataType="juz:TabbedPageJuzDetailViewModel"
            ChildrenList="{Binding Tabs}"
            SelectedItem="{Binding SelectedTab, Mode=TwoWay}"
            mc:Ignorable="d"
            Title="{Binding Title, Mode=TwoWay}"
            Shell.NavBarIsVisible="False"
            BarBackgroundColor="{DynamicResource Primary}">
  <!--Pages can be added as references or inline-->
</tab:BindableTabbedPage>